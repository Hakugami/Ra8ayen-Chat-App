<AnchorPane stylesheets="@../../Styles/Minimalist/AddContact.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AddContactController">
   <VBox alignment="CENTER" prefWidth="200.0" styleClass="listView" stylesheets="@../../Styles/Minimalist/AddContact.css" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <HBox alignment="CENTER" prefHeight="49.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
         <TextField fx:id="phoneField" minHeight="-Infinity" minWidth="-Infinity" prefHeight="38.0" prefWidth="149.0" promptText="Enter Phone Number" styleClass="textField">
            <HBox.margin>
               <Insets left="5.0" />
            </HBox.margin></TextField>
         <Button fx:id="addButton" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="40.0" prefWidth="50.0" text="+" textAlignment="CENTER" HBox.hgrow="ALWAYS">
            <HBox.margin>
               <Insets left="5.0" right="5.0" top="2.0" />
            </HBox.margin>
         </Button>
      </HBox>
      <ListView fx:id="contactsToAddList" prefHeight="150.0" prefWidth="200.0" styleClass="listView" />
      <Button fx:id="addAllButton" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="34.0" prefWidth="80.0" text="confirm">
         <VBox.margin>
            <Insets bottom="5.0" />
         </VBox.margin>
      </Button>
      <Label fx:id="serverReply" alignment="CENTER" prefHeight="16.0" prefWidth="93.0" />
   </VBox>
</AnchorPane>
