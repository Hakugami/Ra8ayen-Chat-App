<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="750.0" prefWidth="500.0" styleClass="chat_window_container" stylesheets="@../Styles/Minimalist/ChatWindow.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.javafx2.controllers.ChatWindowController">
    <center>
        <VBox fx:id="chatBox" styleClass="chat_box">
            <ListView fx:id="chatListView" prefHeight="672.0" prefWidth="496.0" VBox.vgrow="ALWAYS" />
        </VBox>
    </center>
    <bottom>
        <HBox>
            <Button fx:id="emoji_btn" mnemonicParsing="false" styleClass="chat_window_button" text="emoji" />
            <TextField fx:id="inputField" prefHeight="26.0" prefWidth="195.0" styleClass="input_field" HBox.hgrow="ALWAYS" />
         <Button fx:id="sendButton" mnemonicParsing="false" styleClass="chat_window_button" text="Send" />
        </HBox>
    </bottom>
   <top>
       <AnchorPane prefHeight="38.0" prefWidth="248.0" BorderPane.alignment="CENTER">
           <FontAwesomeIconView glyphName="USER" layoutX="8.0" layoutY="23.0" AnchorPane.topAnchor="10.0" />
           <Text fx:id="contactName_field" layoutX="28.0" layoutY="21.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Contact " />
           <Button fx:id="voiceCall_btn" layoutX="110.0" layoutY="7.0" mnemonicParsing="false" styleClass="chat_window_button" text="Voice" AnchorPane.bottomAnchor="5.0" AnchorPane.rightAnchor="70.0" AnchorPane.topAnchor="5.0" />
           <Button fx:id="videoCall_btn" layoutX="182.0" layoutY="7.0" mnemonicParsing="false" styleClass="chat_window_button" text="Video" AnchorPane.bottomAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0" />
       </AnchorPane>
   </top>
</BorderPane>
